{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": ["prettier", "eslint:recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "import/prefer-default-export": "off",
    "jsx-quotes": ["error", "prefer-single"],
    "no-empty": "error",
    "no-irregular-whitespace": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "useTabs": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ]
  }
}
